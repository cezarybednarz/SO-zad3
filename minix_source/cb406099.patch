+int do_changeparent(void) {
+	if(mp->mp_parent == INIT_PROC_NR) {
+		return(EACCES);
+	}
+
+	if(mproc[mp->mp_parent].mp_flags & WAITING) {
+		return(EPERM);
+	}
+
+	mp->mp_parent = mproc[mp->mp_parent].mp_parent;
+
+	return OK;
+}
